#!/bin/sh
set -e

case "$1" in
    configure)

    echo "Removing old files ..."
    [[ -e /etc/init/apps/ocnewsengine.conf ]] && (initctl stop apps/ocnewsengine || killall ocNewsEngine) && rm /etc/init/apps/ocnewsengine.conf
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

chmod +x /usr/lib/AccountSetup/ocnewsplugin

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
